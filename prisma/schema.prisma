generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}


enum UserRole {
  ADMIN
  DOCTOR
  PATIENT
}

enum AuthProvider {
  GOOGLE
  LOCAL
}

/* =======================
   USER
======================= */
model User {
  id           Int          @id @default(autoincrement())
  email        String?      @unique
  phone        String?      @unique
  passwordHash String?      // null for OAuth users
  role         UserRole
  provider     AuthProvider
  providerId   String?

  isActive     Boolean      @default(true)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  doctor       Doctor?
  patient      Patient?

  @@unique([provider, providerId])
}


/* =======================
   Emailotp
======================= */
model EmailOtp {
  id        Int      @id @default(autoincrement())
  email     String
  otp       String
  expiresAt DateTime
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())
}



/* BlacklistedToken */

model BlacklistedToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  expiresAt DateTime
}




/* =======================
   Doctor
======================= */
model Doctor {
  doctorId        Int      @id @default(autoincrement())
  userId          Int      @unique
  fullName        String
  specialization  String[]
  experienceYears Int
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  availability  DoctorAvailability[]

  user User @relation(fields: [userId], references: [id])
}


/* =======================
   Patient
======================= */

enum Gender {
  MALE
  FEMALE
  OTHER
}

model Patient {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  fullName  String
  gender    Gender?
  birthDate DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

/* =======================
  DoctorAvailability
======================= */

enum DayOfWeek {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

model DoctorAvailability {
  id           Int      @id @default(autoincrement())
  doctorId     Int

  dayOfWeek    DayOfWeek[]

  /// 24-hour format, e.g., '13:00' for 1pm
  startTime    String
  /// 24-hour format, e.g., '16:00' for 4pm
  endTime      String
  slotDuration Int
  maxCount     Int

  isActive     Boolean  @default(true)

  location    String?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  doctor       Doctor   @relation(fields: [doctorId], references: [doctorId], onDelete: Cascade)

}

